{
  "manifest_version": 3,
  "name": "gpsd-chrome-polyfill",
  "version": "1.1",
  "description": "Implements the HTML5 GeoLocation API piping to gpsd. Requires gpsd and gpspipew.py to be installed.",
  "homepage_url": "https://git.cube.sg/copper/gpsd-chrome-polyfill",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Share GPS location with page"
  },
  "web_accessible_resources": [
    {
      "resources": ["shim.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ]
}

